@model NuCloudWeb.Models.Cloud

@{
    ViewData["Title"] = "Zone";
}


<div class="login-box">
    <div class="user-box" class="text-center">
        @using (Html.BeginForm("AddCloud", "Home", FormMethod.Post))
        {
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" align="center">Member details</th>
            </tr>
            <tr>
                <td>ID</td>
                <td>@Html.TextBoxFor(m => m.Cod)</td>
            </tr>
            <tr>
                <td>Name</td>
                <td>@Html.TextBoxFor(m => m.Name)</td>
            </tr>
            <tr>
                <td>Website</td>
                <td>@Html.TextBoxFor(m => m.Website)</td>
            </tr>
            <tr>
                <td>Phone</td>
                <td>@Html.TextBoxFor(m => m.PhoneNumber)</td>
            </tr>
            <tr>
                <td></td>
                <td><br /><br/><input type="submit" value="Create" /></td>
            </tr>
        </table>}
    </div>
</div>