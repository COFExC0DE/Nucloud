@model NuCloudWeb.Models.Group

@{
    ViewData["Title"] = "AddGroup";
}


<div class="text-center">
    @using (Html.BeginForm("AddGroup", "Branch", FormMethod.Post)) {
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" align="center">Member details</th>
            </tr>
            <tr>
                <td>Code</td>
                <td>@Html.TextBoxFor(m => m.Cod)</td>
            </tr>
            <tr>
                <td>Name</td>
                <td>@Html.TextBoxFor(m => m.Name)</td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Create" /></td>
            </tr>
        </table>
    }
</div>